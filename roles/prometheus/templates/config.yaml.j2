global:
  scrape_interval: 5s
  evaluation_interval: 5s

scrape_configs:
  - job_name: 'linux'
    static_configs:
      - targets:
        {% for host in groups['all'] %}
        - {{ host }}:9100
        {% endfor %}

  - job_name: 'prometheus'
    scrape_interval: 5s
    scrape_timeout: 5s
    metrics_path: '/prometheus/metrics'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: "mysql"
    static_configs:
      - targets:
{% for vm in groups['db_servers'] %}
        - {{ vm }}:{{ prometheus_exporters['mysql']['port'] }}
{% endfor %}

  - job_name: "bind9"
    static_configs:
      - targets:
{% for vm in groups['dns_servers'] %}
          - {{ vm }}:{{ prometheus_exporters['bind']['port'] }}
{% endfor %}

  - job_name: "nginx"
    static_configs:
      - targets:
{% for vm in groups['all'] %}
        - {{ vm }}:{{ prometheus_exporters['nginx']['port'] }}
{% endfor %}
