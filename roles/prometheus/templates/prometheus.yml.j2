global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: "prometheus"
    scrape_interval: 5s
    scrape_timeout: 5s
    metrics_path: /prometheus/metrics
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "linux"
    static_configs:
      - targets: {{ groups['all'] | map('extract', hostvars, 'ansible_hostname') | map('regex_replace', '$', ':9100') | list }}

  - job_name: "mysql"
    static_configs:
      - targets:
{% for vm in groups['db_servers'] %}
        - {{ vm }}:{{ prometheus_exporters['mysql']['port'] }}
{% endfor %}

  - job_name: "bind9"
    static_configs:
      - targets:
{% for vm in groups['dns_servers'] %}
          - {{ vm }}:{{ prometheus_exporters['bind']['port'] }}
{% endfor %}

  - job_name: "nginx"
    static_configs:
      - targets:
{% for vm in groups['all'] %}
        - {{ vm }}:{{ prometheus_exporters['nginx']['port'] }}
{% endfor %}

