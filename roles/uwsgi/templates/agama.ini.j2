[uwsgi]
uid = agama
gid = agama
chdir = /opt/agama
module = agama:app
socket = 127.0.0.1:5000
chmod-socket = 660
master = true
vacuum = true
die-on-term = true
processes = 5
env = AGAMA_DATABASE_URI=mysql+pymysql://{{ mysql_user }}:{{ mysql_password }}@{{ mysql_host }}/{{ mysql_database }}
plugins = python3
