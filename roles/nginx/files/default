server {
    listen 80 default_server;
    server_name localhost;

    location / {
        include uwsgi_params;
        uwsgi_pass localhost:5000;
    }

    location /static/ {
        alias /opt/agama/static/;
    }

	{% if inventory_hostname in groups['prometheus'] %}	
	location / {
            deny all;
        }

        location /prometheus {
                proxy_pass http://localhost:9090;
        }
	{% endif %}

}
