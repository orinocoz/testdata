server {
    listen 80 default_server;
    server_name orinocoz-1;

    {% if inventory_hostname in groups['prometheus'] %}
    location / {
        deny all;
    }
    
    location /prometheus {
        proxy_pass http://localhost:9090;
    }
    {% else %}
    location / {
        include uwsgi_params;
        uwsgi_pass 127.0.0.1:5000;
    }
    {% endif %}
}
