# Loki files backup sync every day at 21:45 UTC
45 21 * * * root    cp -r /tmp/loki/tsdb-shipper-active /home/backup/loki/ && \
                    cp -r /tmp/loki/wal /home/backup/loki/ && \
                    chown -R backup:backup /home/backup/loki && \
                    chmod -R u+rwX,g+rX /home/backup/loki

# Full Loki backup on Sundays at 22:50 UTC
50 22 * * 0 backup   duplicity --no-encryption full \
                     /home/backup/loki/ rsync://{{ github_user_backup }}@backup.{{ startup_name }}/loki

