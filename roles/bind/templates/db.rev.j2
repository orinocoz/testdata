$TTL    86400
168.192.in-addr.arpa.    IN  SOA {{ startup_name }}. admin.{{ startup_name }}. (
                            2           ; Serial
                        604800         ; Refresh
                         86400         ; Retry
                       2419200         ; Expire
                         604800 )      ; Negative Cache TTL
;

{% for vm in groups['dns_servers'] %}
168.192.in-addr.arpa.    IN  NS  {{ vm }}.{{ startup_name }}.
{% endfor %}

{% for vm in groups['all'] %}
{{ hostvars[vm]['ansible_default_ipv4']['address'].split('.')[3] }}.{{ hostvars[vm]['ansible_default_ipv4']['address'].split('.')[2] }}.168.192.in-addr.arpa.    IN  PTR {{ vm }}.{{ startup_name }}.
{% endfor %}

